@using AnnOtter.WayToSecureExchange.Models.ViewModels;
@model DefaultViewModel;

@{
    var browserTitle = string.IsNullOrEmpty(Model.Labels.BrowserTitle) ? Model.Labels.MainTitle : Model.Labels.BrowserTitle;
}

<!DOCTYPE html>
<html lang="en" class="h-100" data-bs-theme="light">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/main.css?v=0.16.0" integrity="sha384-7NQGVgDfKczpdY62troz1wxpxE6eOq8ClE+WMkEKM460fchBJBZheLu3F4DCv6ea" />
    <link rel="stylesheet" href="/css/theme.css?v=0.16.0" />
    <link rel="stylesheet" href="/lib/bootstrap-5.3.8-dist/css/bootstrap.min.css" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB">
    <link rel="icon" href="data:image/x-icon;base64,@System.Net.WebUtility.HtmlEncode(Model.Appearance.Favicon)">
    <title>@ViewData["Title"] - @browserTitle</title>

</head>

<body class="d-flex h-100 text-center text-bg-dark-ao">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">&nbsp;</h3>
            </div>
        </header>

        <main class="container image" data-bs-theme="dark">
            @if (Model.Appearance.ShowLogo)
            {
                <a title="Link to home" href="/"><img src="@Model.Appearance.LogoPath" width="128" alt="Ann Otter Way To Secure Exchange Logo" /></a>
            }
            
            @RenderBody()
        </main>

        <footer class="mt-auto text-ao">
            <p>v0.16.0 // <i class="fa-brands fa-github footerLink"></i> <a class="footerLink" href="https://github.com/daniiiol/AnnOtter.WayToSecureExchange" target="_blank" rel="noopener" title="Check out our GitHub Repository for the source code and contributions.">GitHub Repository</a></p>
        </footer>
    </div>

    <script src="/lib/bootstrap-5.3.8-dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"></script>
    <script src="/js/aes.js?v=0.16.0" integrity="sha384-Wqw7eLuMAKohF3NUxOr+sp26R/j60QAeinMBfJ6wP9Q/tJ//yYIenRX7BjkyBm4S"></script>
    <script src="/js/site.js?v=0.16.0" integrity="sha384-7dlJsCmvfZ/CRh61dKBO0lCorAxz/9CgNJTaCLPWNC4nlccQVmm6UWz//zkMf524"></script>
</body>

</html>